<%= form_for(@article, html: {multipart: true}) do |f| %>

    <ul>
    <% @article.errors.full_messages.each do |error| %>
        <li><%= error %></li>
    <% end %>
    </ul>

    <p>
      <%= f.label :title%><br />
      <%= f.text_field :title%>
    </P>
    <p>
      <%= f.label :body%><br />
      <%= f.text_area :body%>
    </P>
    <p>
      <%= f.label :tag_list %><br />
      <%= f.text_field :tag_list %>
   </p>
   <p>
      <% if @article.image.exists? %>
        <%= image_tag @article.image.url%><br/>
      <% end%>
      <%= f.label :image, "Attarch an image " %><br />
      <%= f.file_field :image %>
   </p>
    <p>
      <%= f.submit %>
    </p>

<% end%>